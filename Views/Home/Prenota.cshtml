@model Prenotazione;

@{
    ViewData["Title"] = "Prenota";
}

<div class="text-center">
    <h1 class="display-4">Prenota</h1>

    <form class="m-2" method="post" asp-action="comprare">
        <div class="form-group">
            <label asp-for="Nome">Il tuo nome:</label>
            <input asp-for="Nome" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Cognome">Il tuo cognome:</label>
            <input asp-for="Cognome" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Email">La tua mail:</label>
            <input asp-for="Email" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="DataNascita">Data di nascita:</label>
            <input asp-for="DataNascita" type="date" class="form-control">
        </div>
        <div class="form-group">
            <label>Sesso:</label>
            <div>
                <label><input type="radio" asp-for="Sesso" value="Maschio"> Maschio</label>
                <label><input type="radio" asp-for="Sesso" value="Femmina"> Femmina</label>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Ruolo">Ruolo:</label>
            <select asp-for="Ruolo" class="form-control">
                <option value="Studente">Studente</option>
                <option value="Docente">Docente</option>
                <option value="Altro">Altro</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Prenota</button>
    </form>

    
</div>